script/source = "extends Entity

export var weapon_id : String

func _ready():
	add_to_group(\"items\")
	
	if has_meta(\"velocity\"):
		velocity = get_meta(\"velocity\")
	
	if weapon_id:
		$Icon.texture = Globals.get_weapon(weapon_id).icon

func _physics_process(delta):
	
	if on_ground:
		velocity *= .98
	
	# get pushed by near entities
	for i in $PushArea.get_overlapping_bodies() :
		if i == self or !i is Entity or !i.on_ground :
			continue
		
		var distance = i.position.x - position.x
		if !distance :
			distance = randf() - .5
		velocity.x -= 32 * sign(distance) - distance
	

\"\"\"func damage( intensity, push = Vector2() ):
	
	damage -= intensity
	
	velocity = Vector2()
	initial_forced_velocity = push * ( damage + 10 ) * 10
	forced_velocity = initial_forced_velocity
	stun = true
	
	if damage <= 0 :
		win()

func die():
	queue_free()

func win():
	#for i in get_tree().get_nodes_in_group(\"players\"):
	#	i.damage = max( i.damage - 20, 0 )
	
	layers = 0
	set_physics_process(false)
	
	$\"DamageIndicator\".visible = false
	$\"AudioStreamPlayer2D\".play()
	$\"AnimationPlayer\".play(\"Break\")
	
	yield( get_tree().create_timer(2), \"timeout\" )
	queue_free()\"\"\"
"

